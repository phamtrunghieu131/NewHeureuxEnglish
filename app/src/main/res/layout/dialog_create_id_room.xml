<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_dialog_createRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên phòng"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <EditText
        android:id="@+id/nameRoom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên phòng..."
        android:layout_below="@+id/title_dialog_createRoom"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameRoom_text"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/create_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tạo phòng"/>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Hủy"/>
    </LinearLayout>
</RelativeLayout>